# Project: packJPG
# Makefile created by Matthias Stirner 28.03.2007
# Working with GCC v3.4.5

CC       = gcc
CPP      = g++
RC       = windres
CPPFLAGS = -I. -DUNIX -DDEV_BUILD -O3 -Wall -pedantic -funroll-loops -ffast-math -fsched-spec-load -fomit-frame-pointer
LDFLAGS  = -s -static-libgcc
DEPS     = bitops.h aricoder.h pjpgtbl.h dct8x8.h Makefile
OBJ      = bitops.o aricoder.o packjpg.o
RES      = icon.res
BIN      = packjpg

%.o: %.cpp $(DEPS)
	$(CPP) -c -o $@ $< $(CPPFLAGS)

$(BIN): $(OBJ)
	$(CPP) -o $@ $^ $(LDFLAGS)

clean:
	$(RM) $(OBJ)
